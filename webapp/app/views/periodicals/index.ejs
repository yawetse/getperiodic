<div class="page-header">
    <h1>Your Volumes</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> Create a Volume', path_to.new_periodical(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (periodicals.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Access</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% periodicals.forEach(function (periodical) { %>
                        <tr>
                            <td><strong><%- link_to(periodical.title, path_to.periodical(periodical.name)) %></strong>
                                <p class=""><small><%- periodical.description %></small></p>
                            </td>
                            <td>
                                <%
                                    if(periodical.public==true){
                                        %>
                                        public
                                        <%
                                    }
                                    else{
                                        %>
                                        private
                                        <%
                                    }
                                %>
                            </td>
                            <td>
                                <%- link_to('<i class="icon-edit"></i> Edit', path_to.edit_periodical(periodical), {class: 'btn btn-mini'}) %>
                                <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.periodical(periodical), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
                            </td>
                        </tr>
                    <% }); %>        
                </tbody>
            </table>
        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No periodicals were found.</strong> 
            </p>
        <% } %>
    </div>
</div>